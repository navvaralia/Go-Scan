<resources>
    <!-- Base application theme. -->
    <style name="Theme.GoScan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_theme_green</item>
        <item name="colorPrimaryVariant">@color/dark_theme_second</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">@color/dark_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_theme_green</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/backgroundColor</item>
        <item name="colorSurface">?attr/colorPrimary</item>
    </style>
</resources>